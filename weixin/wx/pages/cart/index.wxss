/* pages/cart/index.wxss */
.cart-page{
  min-height: 100vh;
  background-color: #fff !important;
  padding:10rpx;
}
.cart-list{
  display: block;
  width: 100%;
  overflow:hidden;
  margin-bottom: 20rpx;
}
.top{
  width:100%;
  height: 76rpx;
  overflow: hidden
}
.select-all {
  width: 80rpx;
  float: left;
}
.shop-name{
  float: left;

}
.select-all image{
  width: 40rpx;
  height: 40rpx;
}
.cart-good-select{
  float:left;
  width: 40rpx;
  margin-top:10%;
  margin-right:30rpx;


}
.cart-good-select image{
  width: 100%;
}
.cart-good-pic{
  width: 30%;
  float:left;
  margin-right:30rpx;
}
.cart-good-pic image{
  width: 100%;
}
.cart-good-title{
 font-size: 30rpx;
}
.cart-good-size{
 color:gray;
 font-size: 28rpx;
 margin-top:16rpx;

}
.cart-good-price{
 color:red;
 font-size: 30rpx;
  margin-top:16rpx;
}
.cart-good-num{
  position: absolute;
  left:68%;
  top:65%;
  color:red;
  font-size:30rpx; 
  width:70rpx;
  text-align:center;

}
.cart-good-info{
  float:left;
  width: 55%;
  padding-top:40rpx;
  position: relative
}
.cart-plus-btn image{
  width: 40rpx;
  height: 40rpx;
}
.cart-add-btn image{
  width: 40rpx;
  height: 40rpx;
}
.cart-plus-btn{
   position: absolute;
   left:55%;
   top:65%;
}
.cart-add-btn{
  position: absolute;
   left:88%;
   top:65%;
}
.hide{
  display: none
}
.show{
  display: block
}
.cart-control{

position: absolute;
width: 100%;
left:0;
bottom:0;
height: 100rpx;
border-top:solid 1px #f2f2f2;
box-sizing: border-box;
}
.allselect{
  width: 50rpx;
  position: absolute;
  left:10rpx;
  top:25rpx;
  
}
.allselect image{
  width: 40rpx;
  height:40rpx;
}
.allselect-btn{
  position:absolute;
  left:80rpx;
  top:25rpx;
}
.total-price{
  width:280rpx;
  position: absolute;
  left:24%;
  top:25rpx;
}
.buy-good{
  width:300rpx;
   position: absolute;
  right:0;
  top:0;
  text-align: center;
  color:#fff;
  height:100rpx;
  line-height: 100rpx;
  background-color:red;

}
.cart-good-del{
  position: absolute;
  width: 40rpx;
  height:40rpx;
  left:87%;
   top:-3%;

  font-size: 26rpx;
}
button{
  padding:6rpx!important;
  line-height: 42rpx!important;
}